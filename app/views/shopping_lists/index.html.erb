<h1>Shopping List</h1>

<div>
  <div>
    <p>Amount of food to buy: <%= @different_foods_count %></p>
    <p>Total value of food needed: $<%= @total_price %></p>
  </div>
  <div>
    <p>Recipe: <%= link_to "#{@recipe.name}", recipe_path(@recipe), class: "link" %></p>
    <p>Inventory: <%= link_to "#{@inventory.name}", inventory_path(@inventory), class: "link" %></p>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @food_info.each do |food| %>
      <tr>
        <td><%= food[:name] %></td>
        <td><%= food[:quantity] %> <%= food[:measurement_unit] %></td>
        <td>$<%= food[:price_difference] %></td>
      </tr>
    <% end %>
  </tbody>
</table>