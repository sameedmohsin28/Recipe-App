<main>
  <h2>Add food</h2>
  <div>
    <%= form_with(model: @inventory_food, url: inventory_inventory_foods_path) do |form| %>
      <%= form.label :quantity %>
      <%= form.number_field :quantity, required: true %>

      <div class="field mb-3">
        <%= form.label :food_id %>
        <%= form.collection_select :food_id, Food.all, :id, :name, {}, class: "form-control form-select mb-3" %>
      </div>
      <%= form.submit 'Submit' %>
    <% end %>
  </div>
</main>
