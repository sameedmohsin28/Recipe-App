<h1>Add a new inventory</h1>

<%= form_with model: @inventory, url: inventories_path, local: true do |form| %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit 'Add new inventory' %>
  </div>

<% end %>
